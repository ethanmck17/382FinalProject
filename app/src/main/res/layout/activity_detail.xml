<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
     android:layout_width="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainImgDetail"
            android:adjustViewBounds="true"/>
        <EditText
            android:id="@+id/titleDetail"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="@font/barlow_light"
            android:layout_alignBottom="@+id/mainImgDetail"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:text="Card Title" />

        <TextView
            android:id="@+id/noteTypeDetail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/mainImgDetail"
            android:textColor="?android:textColorSecondary"
            android:fontFamily="@font/barlow_regular"
            android:text="Note Type" />

        <EditText
            android:id="@+id/subTitleDetail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_below="@id/noteTypeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_light"
            android:padding="8dp"
            android:text="Subtitle" />

    </RelativeLayout>
</ScrollView>